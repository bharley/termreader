{
  "parser": "babel-eslint",

  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },

  "extends": "airbnb-base",

  "rules": {
    "global-require": "off",
    "no-console": "off",
    "prefer-template": "off",

    "import/no-dynamic-require": "off",
    "import/prefer-default-export": "off"
  }
}
